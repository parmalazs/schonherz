<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#a6977c"
    >

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:scaleType="fitCenter" 
        android:src="@drawable/partnerikon"
    />
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
     >
        <TextView 
            android:id="@+id/tvNamePartner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="#46594b"
            android:textColor="#FFFFFF"
        />
        
        <TextView
            android:id="@+id/tvPhonePartner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#260b01" 
        />
        
        <TextView 
            android:id="@+id/tvHomePagePartner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="www.google.com"
            android:textColor="#260b01"
        />
        
        <TextView
            android:id="@+id/tvEmailPartner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:textColor="#260b01" 
        />
        
    </LinearLayout>
    
</LinearLayout>