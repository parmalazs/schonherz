<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#a6977c"
    android:minHeight="40sp"
     >
    
    <TextView
        android:id="@+id/tvMunkaDatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#46594b"
        android:textColor="#FFFFFF"
         />
    
    <TextView
        android:id="@+id/tvMunkaTelephelye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50sp"
        android:layout_weight="2"
        android:background="#d9b384"
        android:textColor="#260b01"
        />
    
    <TextView
        android:id="@+id/tvMunkaBevetel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:paddingRight="20sp"
		
        android:textColor="#260b01"
        />
    
    <TextView
        android:id="@+id/tvMunkaBecsultIdoOraban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20sp"
        
        android:textColor="#260b01"
      />

</LinearLayout>